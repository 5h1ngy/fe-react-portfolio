{
    "include": ["app/src/**/*"],
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ES6",
        "paths": {
            "@app/assets/*": [
                "app/src/assets/*"
            ],
            "@app/components/*": [
                "app/src/components/*"
            ],
            "@app/containers/*": [
                "app/src/containers/*"
            ],
            "@app/hocs/*": [
                "app/src/hocs/*"
            ],
            "@app/pages/*": [
                "app/src/pages/*"
            ],
            "@app/services/*": [
                "app/src/services/*"
            ],
            "@app/store/*": [
                "app/src/store/*"
            ]
        }
    }
}